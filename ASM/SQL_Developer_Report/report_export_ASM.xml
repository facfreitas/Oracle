	<query>
		<sql><![CDATA[select group_number,dg.name, 
       to_char(dg.total_mb  / case when dg.type = 'EXTERN' Then 1
                       when dg.type = 'NORMAL' then 2
                       when dg.type = 'HIGH'   then 3
                       else 1 end,'999G999G990D99','NLS_NUMERIC_CHARACTERS = '',.''') Total_MB, 
       to_char(round(dg.free_mb ) / case when dg.type = 'EXTERN' Then 1
                       when dg.type = 'NORMAL' then 2
                       when dg.type = 'HIGH'   then 3
                       else 1 end,'999G999G990D99','NLS_NUMERIC_CHARACTERS = '',.''') FREE_MB, dg.usable_file_mb, dg.type,ds.MOUNT_STATUS,count(ds.MOUNT_STATUS) "Anzahl Disks"
  from v$asm_diskgroup dg
  right outer join v$asm_disk ds using (group_number)
 group by  group_number,dg.name, dg.total_mb, dg.free_mb,dg.usable_file_mb,dg.type,ds.MOUNT_STATUS
 order by group_number]]></sql>
	</query>
